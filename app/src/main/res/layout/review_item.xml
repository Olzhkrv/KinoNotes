<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/value5"
    android:layout_marginBottom="@dimen/value5"
    app:cardBackgroundColor="#fafafa"
    app:cardCornerRadius="@dimen/value10"
    app:cardElevation="3dp">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="@dimen/value10">

    <TextView
        android:id="@+id/textViewAuthor"
        android:layout_width="@dimen/reviewAuthorWidth"
        android:layout_height="wrap_content"
        android:textColor="@color/theBackground"
        android:textSize="@dimen/textSize"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Dondald Tramp" />

    <TextView
        android:id="@+id/textViewContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/value6"
        android:lineSpacingMultiplier="1.1"
        android:textColor="@color/theBackground"
        android:textSize="@dimen/textSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewAuthor"
        tools:text="Nice, cool film. I like it, here a lot of main Nice, cool film. I like it, here a lot of main Nice, cool film. I like it, here a lot of main" />

  </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>

